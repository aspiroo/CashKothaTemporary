<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="10dp">

    <!-- Icon -->
    <ImageView
        android:id="@+id/transaction_icon"
        android:layout_width="57dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="#205757"
        android:padding="15dp"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_salary" /> <!-- Placeholder Icon -->

    <!-- Transaction Details -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/transaction_icon"
        android:layout_marginStart="15dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/transaction_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salary"
            android:textColor="#052224"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/transaction_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18:27 - April 30"
            android:textColor="#05AE86"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Amount -->
    <TextView
        android:id="@+id/transaction_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="100000 TK"
        android:textColor="#052224"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>

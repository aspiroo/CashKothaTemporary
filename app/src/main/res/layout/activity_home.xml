<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/a_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05AE86"
    android:fitsSystemWindows="true"
    tools:context=".HomeActivity">

    <!-- Top Status Bar Area -->
    <RelativeLayout
        android:id="@+id/status_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/tab_background_unselected"
            android:clickable="true"
            android:focusable="true"
            android:padding="6dp"
            android:src="@drawable/ic_notifications" />

        <ImageView
            android:id="@+id/settings_icon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/tab_background_unselected"
            android:clickable="true"
            android:focusable="true"
            android:padding="6dp" />
        <!--android:src="@drawable/ic_settings" /> -->

    <ImageView
        android:id="@+id/profile_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/tab_background_unselected"
        android:clickable="true"
        android:focusable="true"
        android:padding="6dp"
        android:src="@drawable/ic_profile" />

</RelativeLayout>

<!-- Welcome -->
    <LinearLayout
        android:id="@+id/welcome_message_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/status_bar"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/welcome_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi Safwan, Welcome Back"
            android:textColor="#052224"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/greeting_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Morning"
            android:textColor="#052224"
            android:textSize="14sp" />
    </LinearLayout>

    <!-- Balance / Expense -->
    <LinearLayout
        android:id="@+id/balance_expense_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcome_message_layout"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Balance"
                android:textColor="#093030"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/total_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1,000,000 TK"
                android:textColor="#F1FFF3"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="48dp"
            android:background="#DFF7E2" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Expense"
                android:textColor="#093030"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/total_expense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-99,999 TK"
                android:textColor="#084A3A"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom navigation must be declared early (so we can reference it from main content) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_background"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="unlabeled"
        android:fitsSystemWindows="true"
        android:elevation="8dp" />

    <!-- White Card Content Area - sits above the bottom nav -->
    <LinearLayout
        android:id="@+id/main_content_area"
        android:layout_width="match_parent"
        android:layout_height="531dp"
        android:layout_above="@id/bottomNavigationView"
        android:layout_below="@id/balance_expense_layout"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="-56dp"
        android:background="@drawable/white_card_background"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="12dp">


        <!-- Put content into a ScrollView so the whole area scrolls if needed -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Tabs -->
                <LinearLayout
                    android:id="@+id/tabs_layout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/tab_background_unselected"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/general_tab"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="General"
                        android:textColor="#052224"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/transactions_tab"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Transactions"
                        android:textColor="#052224"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/budget_tab"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Budget"
                        android:textColor="#052224"
                        android:textSize="15sp" />
                </LinearLayout>

                <!-- General Section -->
                <LinearLayout
                    android:id="@+id/general_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="General info for the user"
                        android:textColor="#052224"
                        android:textSize="16sp" />
                </LinearLayout>

                <!-- Transactions Section -->
                <LinearLayout
                    android:id="@+id/transactions_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/transactions_header"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Recent Transactions"
                        android:textColor="#052224"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Give the ListView a fixed max height or use wrap_content inside ScrollView.
                         For better performance, consider replacing ListView with RecyclerView. -->
                    <ListView
                        android:id="@+id/transactions_list"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:divider="@android:color/transparent"
                        android:dividerHeight="10dp"
                        tools:listitem="@layout/list_item_transaction" />
                </LinearLayout>

                <!-- Budget Section -->
                <LinearLayout
                    android:id="@+id/budget_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Budget info for the user"
                        android:textColor="#052224"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>

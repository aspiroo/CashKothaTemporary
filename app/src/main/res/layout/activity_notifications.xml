<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#05AE86"
    android:padding="20dp">

    <!-- White Rounded Background -->
    <LinearLayout
        android:id="@+id/white_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/white_card_background"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_alignParentBottom="true" />

    <!-- Title -->
    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textColor="#093030"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true" />

    <!-- Back Icon -->
    <ImageView
        android:id="@+id/back_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/ic_back_arrow"
        app:tint="#FFFFFF" />

    <!-- Notification Items -->
    <LinearLayout
        android:id="@+id/notification_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notification_title"
        android:layout_marginTop="40dp"
        android:orientation="vertical">

        <!-- Example Notification -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="10dp">

            <View
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:backgroundTint="#05AE86"
                android:clipToOutline="true"
                android:background="@drawable/green_card_background" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:text="Reminder!"
                    android:textColor="#052224"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_height="15dp"
                    android:layout_width="15dp"/>

                <TextView
                    android:text="Set up your automatic savings to meet your goals."
                    android:textColor="#052224"
                    android:textSize="13sp"
                    android:layout_height="15dp"
                    android:layout_width="15dp"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_nav_background"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="unlabeled" />

</RelativeLayout>